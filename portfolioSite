<script>
  function loadGame() {
    const container = document.getElementById("game-container");
    if (!container.innerHTML) {
      container.innerHTML = `
        <iframe frameborder="0" src="https://itch.io/embed-upload/13471097?color=333333" allowfullscreen width="100%" height="380" loading="lazy"></iframe>
      `;
    }
  }
</script>
